@model Usuario
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutSGPI";
}

<div class="container">
    <div class="cuacenterL">

        <form method = "post">

            <div>
                 <img class="usu" src="~/img/usu.png" />
             </div>
            <div class="formL">
                <label for="usuario">Usuario</label>
            </div>
                <div class="formL">
                <input asp-for = "NumeroDocumento" type="text" />
            </div>
            <div class="formL">
                <label for="pass">Contraseña</label>
            </div>
