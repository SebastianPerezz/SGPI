@model SGPI.Models.Usuario

@{
    ViewData["Title"] = "ActualizarEstudiante";
    Layout = "_LayoutSGPI";
}

<div class="container">
    <nav class="topnavA">
        <a class="active" href="~/Estudiante/ActualizarEstudiante">Actualizar Estudiante</a>
        <a href="~/Estudiante/PagosEstudiante">Pagos</a>
        <button class="btnLogUpE">Cerrar Sesión</button>
    </nav>
    <div class="cuacenter">
        <div class="bus">
            <form method="post">
                <div class="cont1">
                    <div class="row">
                        <div class="col-md-4">
                            <label for="identificacion">Tipo Identificación</label>
                            @Html.DropDownList("IdDoc", new SelectList(ViewBag.documento, "IdDoc", "TipoDocumento"))
                        </div>
                        <div class="col-md-4">
                            <label for="name">Nombre</label>
                            <input type="text" />
                        </div>
                        <div class="col-md-4">
                            <label for="priApel">Primer Apellido</label>
                            <input type="text" />
                        </div>
                    </div>
                </div>
                <div class="cont1">
                    <div class="row">
                        <div class="col-md-4">
                            <label for="segApel">Segundo Apellido</label>
                            <input type="text" />
                        </div>
                        <div class="col-md-4">
                            <label for="doc">Número de Documento</label>
                            <input type="text" />
                        </div>
                        <div class="col-md-4">
                            <label for="email">Correo</label>
                            <input type="email" />
                        </div>
                    </div>
                </div>
                <div class="cont1">
                    <div class="row">
                        <div class="col-md-4">
                            <label for="rol">Rol Usuario</label>
                        </div>
                        <div class="col-md-4">
                            <label for="genero">Genero</label>
                            @Html.DropDownList("IdGenero", new SelectList(ViewBag.genero, "IdGenero", "Genero1"))
                        </div>
                        <div class="col-md-4">
                            <label for="pass">Contraseña</label>
                            <input type="text" />
                        </div>
                    </div>
                </div>
                <div class="cont1">
                    <div class="row">
                        <div class="col-md-6">
                            <label for="programa">Programa</label>
                            @Html.DropDownList("IdPrograma", new SelectList(ViewBag.programa, "IdPrograma", "Programa1"))
                        </div>
                        <div class="col-md-6">
                            <label for="cert">Certificado Electoral</label>
                            <input type="file" />
                        </div>
                    </div>
                </div>
                <div class="btnsAc">
                    <button class="btnCS">Actualizar</button>
                </div>
            </form>
        </div>
    </div>



</div>





