
@{
    ViewData["Title"] = "ActualizarEstudiante";
    Layout = "_LayoutSGPI";
}

<div class="container">
    <nav class="topnavA">
        <a class="active" href="~/Estudiante/ActualizarEstudiante">Actualizar Estudiante</a>
        <a href="~/Estudiante/PagosEstudiante">Pagos</a>
        <button class="btnLogUpE">Cerrar Sesión</button>
    </nav>
    <div class="cuacenter">
        <div class="bus">
            <div class="cont1">
                <div class="row">
                    <div class="col-md-4">
                        <label for="identificacion">Tipo Identificación</label>
                        <select name="identificacion" id="identificacion">
                            <option value="Cedula Ciudadania">Cedula Ciudadania</option>
                            <option value="Tarjeta de Identidad">Tarjeta de Identidad</option>
                            <option value="Cedula de Extranjeria">Cedula de Extranjeria</option>
                            <option value="Pasaporte">Pasaporte</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="name">Nombre</label>
                        <input type="text" name="nombre" />
                    </div>
                    <div class="col-md-4">
                        <label for="priApel">Primer Apellido</label>
                        <input type="text" name="priApel" />
                    </div>
                </div>
            </div>
            <div class="cont1">
                <div class="row">
                    <div class="col-md-4">
                        <label for="segApel">Segundo Apellido</label>
                        <input type="text" name="segApel" />
                    </div>
                    <div class="col-md-4">
                        <label for="doc">Número de Documento</label>
                        <input type="text" name="numDoc" />
                    </div>
                    <div class="col-md-4">
                        <label for="email">Correo</label>
                        <input type="email" name="email" />
                    </div>
                </div>
            </div>
            <div class="cont1">
                <div class="row">
                    <div class="col-md-4">
                        <label for="roll">Roll Usuario</label>
                        <select name="roll" id="roll">
                            <option value="Administrador">Administrador</option>
                            <option value="Coordinador">Coordinador</option>
                            <option value="Estudiante">Estudiante</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="genero">Genero</label>
                        <select name="genero" id="genero">
                            <option value="Masculino">Masculino</option>
                            <option value="Femenino">Femenino</option>
                            <option value="Otro">Otro</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="pass">Contraseña</label>
                        <input type="text" name="pass" />
                    </div>
                </div>
            </div>
            <div class="cont1">
                <div class="row">
                    <div class="col-md-6">
                        <label for="programa">Programa</label>
                        <select name="programa" id="programa">
                            <option value="Especialización en seguridad informatica">Especialización en seguridad informatica</option>
                            <option value="Maestria en gestión TI">Maestria en gestión TI</option>
                            <option value="Maestria en medio ambiente">Maestria en medio ambiente</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="cert">Certificado Electoral</label>
                        <input type="file" name="cert" />
                    </div>
                </div>
            </div>
            <div class="btnsAc">
                <button class="btnCS">Actualizar</button>
            </div>
        </div>
</div>



</div>





